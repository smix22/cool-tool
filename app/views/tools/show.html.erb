<div class="container-fluid">
  <div style="height: 24px;"></div>

  <div class="mx-3">
    <h4 class="text-primary"><strong>TOOLS /</strong> <%= @tool.name.upcase %></h4>
  </div>

  <div class="d-flex m-3 py-3">
    <div>
      <div class="card" style="width: 360px;">
        <%= cl_image_tag @tool.photo.key, style: "height: 358px; width: 358px;", class: "card-img-top" %>
        <div class="card-body border-top bg-light">
          <div class="d-flex justify-content-between">
            <div>
            <h4 class="card-title text-primary"><%= @tool.name %></h4>
            </div>
            <div>
              <button type="button" class="btn btn-outline-primary text-primary btn-sm" disabled><%= @tool.price %> â‚¬</button>
            </div>
          </div>
          <p><i class="fa-solid fa-location-dot"></i>&nbsp;&nbsp;<%= @tool.location %></p>
          <p class="card-text"><%= @tool.details %></p>
        </div>
      </div>
    </div>

    <% if user_signed_in? %>
      <%= render "shared/book" %>
    <% end %>
  </div>
</div>
