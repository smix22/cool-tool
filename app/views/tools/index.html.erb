<div class="container-fluid">

  <%= render "shared/search" %>

  <hr>
  <div style="height: 24px;"></div>

  <div class="mx-3">
    <h4 class="text-primary"><strong>DISCOVER</strong></h4>
  </div>

  <div class="d-flex flex-wrap">
  <% if @tools %>
    <% @tools.each do |tool| %>
      <div class="card m-3" style="width: 210px;">
        <p class="card-header text-gray bg-light"><%= tool.category.upcase %></p>
        <%= cl_image_tag tool.photo.key, style: "height: 208px; width: 208px;", class: "card-img-top" %>
        <div class="card-body border-top bg-light">
          <h4 class="card-title text-primary"><%= tool.name %></h4>
          <p><i class="fa-solid fa-location-dot"></i>&nbsp;&nbsp;<%= tool.location %></p>
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to tool_path(tool) do %>
            <div>
              <button type="button" class="btn btn-primary text-white">SEE DETAILS</button>
            </div>
            <% end %>
            <div>
              <button type="button" class="btn btn-outline-primary text-primary btn-sm" disabled><%= tool.price %> â‚¬</button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="mx-3"><i><%= @message %></i></p>
  <% end %>
  </div>

</div>
