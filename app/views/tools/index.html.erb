<nav class="px-3 py-2 bg-light border-bottom fixed-top">
  <div class="d-flex justify-content-between align-items-center">
    <div style="width: 360px;">
      <%= link_to tools_path do %>
        <%= image_tag "cool_tool_logo.png", style: "height: 48px;" %>
      <% end %>
    </div>
    <div class="flex-grow-1 d-flex justify-content-around">
      <p class="m-0">TOOLS</p>
      <p class="m-0">MY TOOLBOX</p>
      <p class="m-0">DISCOVER</p>
      <p class="m-0">CATEGORIES</p>
    </div>
    <div class="d-flex justify-content-end" style="width: 360px;">
      <i class="fa-solid fa-circle-user fa-2x"></i>
    </div>
  </div>
</nav>

<div class="container-fluid">

  <div style="height: 24px;"></div>
  <div class="mx-auto my-3 w-50">
    <form action="/tools">
      <div class="input-group input-group-lg">
        <input type="text" name="search" class="form-control" placeholder="Search for a tool or a category ...">
        <button type="submit" class="btn btn-primary text-white"><i class="fa-solid fa-magnifying-glass"></i></button>
      </div>
    </form>
  </div>
  <div style="height: 24px;"></div>

  <div class="d-flex justify-between">
  <% @tools.each do |tool| %>
    <div class="card m-3">
      <p class="card-header text-gray bg-light"><%= tool.category.upcase %></p>
      <%= image_tag "cool_tool_thumb.png", style: "height: 240px; width: 240px;", class: "card-img-top" %>
      <div class="card-body border-top bg-light">
        <h4 class="card-title text-primary"><%= tool.name %></h4>
        <p><i class="fa-solid fa-location-dot"></i>&nbsp;&nbsp;<%= tool.location %></p>
        <%= link_to "SEE DETAILS", tool_path(tool), class: "btn btn-primary text-white" %>
      </div>
    </div>
  <% end %>
  </div>

</div>
