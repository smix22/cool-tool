<div class="container-fluid">

  <div style="height: 24px;"></div>

  <div class="mx-3">
    <h4 class="text-primary"><strong>MY BOOKINGS</strong></h4>
  </div>

  <div class="mx-3">
    <% if @bookings %>
      <% @bookings.each do |booking| %>
        <div>
          <%= booking.created_at.strftime("%b %d, %Y") %> | <%= booking.tool.name %> | Owner: <%= booking.user.first_name %> <%= booking.user.last_name %> |Â <% if booking.requested %> Accepted <% end %>
        </div>
    <% end %>
    <% else %>
      <p class="mx-3"><i>You don't have any bookings yet.</i></p>
    <% end %>
  </div>

  <% if user_signed_in? %>
      <% if current_user.id == 1 %>
      <%= render "shared/bookingsuser" %>
      <% else %>
      <%= render "shared/bookingsowner" %>
      <% end %>
    <% end %>

</div>
